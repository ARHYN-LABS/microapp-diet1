{
  "expo": {
    "name": "SafePlate AI",
    "scheme": "safeplate",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F8FAFC"
    },
    "slug": "whats-in-my-food",
    "version": "0.1.0",
    "orientation": "portrait",
    "sdkVersion": "49.0.0",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "ios": {
      "infoPlist": {
        "NSCameraUsageDescription": "Allow camera access to identify products."
      }
    },
    "android": {
      "usesCleartextTraffic": true,
      "networkSecurityConfig": "./network_security_config.xml",
      "permissions": [
        "CAMERA",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#F8FAFC"
      },
      "package": "com.askmobisoft55.whatsinmyfood"
    },
    "extra": {
      "apiBase": "${EXPO_PUBLIC_API_BASE}",
      "userId": "${EXPO_PUBLIC_USER_ID}",
      "eas": {
        "projectId": "f69b269a-e71d-4cf8-b2ba-bc15955ae252"
      }
    }
  }
}
